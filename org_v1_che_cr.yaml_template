apiVersion: org.eclipse.che/v1
kind: CheCluster
metadata:
  name: eclipse-che
spec:
  server:
    cheImage: '{{CHE_IMAGE}}'
    cheImageTag: '{{CHE_IMAGE_TAG}}'
    cheImagePullPolicy: {{CHE_IMAGE_PULL_POLICY}}
    cheLogLevel: 'DEBUG'
    cheDebug: 'true'
    serverExposureStrategy: 'single-host'
    singleHostWorkspaceExposureType: 'gateway'
    customCheProperties:
      CHE_LIMITS_USER_WORKSPACES_RUN_COUNT: '-1'
  metrics:
    enable: false
