#!/bin/bash

set -e

SCRIPT_DIR=$( dirname "${0}" )
# shellcheck source=env.sh
. "${SCRIPT_DIR}/env.sh"

sh "${SCRIPT_DIR}"/che-buildq "${*}"

kc scale deployment che --replicas=0 -n ${CHE_NAMESPACE}
sh "${SCRIPT_DIR}"/che-crebuilddocker
kc scale deployment che --replicas=1 -n ${CHE_NAMESPACE}

#sh "${SCRIPT_DIR}"/che-ckillpod
